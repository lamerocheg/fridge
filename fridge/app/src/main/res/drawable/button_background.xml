<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimaryDark"/>
            <padding
                android:bottom="8dp"
                android:top="8dp"
                android:left="15dp"
                android:right="15dp"/>
            <corners
                android:radius="5dp"/>
            <solid
                android:color="@color/colorPrimaryTransparent"/>
        </shape>
    </item>

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimaryDark"/>
            <padding
                android:bottom="8dp"
                android:top="8dp"
                android:left="15dp"
                android:right="15dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>